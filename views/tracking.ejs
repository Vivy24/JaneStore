<%-include("navbar") -%>
    <div id="cart">
        <% if (orders && orders.length>0){ %>
            <table class="table table-hover cartTable">
                <thead>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Status</th>
                </thead>
                <tbody>
                    <% orders.forEach(function(order){ %>
                        <% order.items.forEach(function(item) { %>
                            <tr class="cart-product">
                                <td class="product-thumb align-middle">
                                    <img src="<%=item.image%>" alt="order lipsticks" class="cartImg">
                                </td>
                                <td class="align-middle">
                                    <h6 class="cartText">
                                        <%= item.title %>
                                    </h6>
                                </td>
                                <td class="align-middle">
                                    <h6 class="cartText">
                                        <%= item.qty %>
                                    </h6>
                                </td>

                                <td class="align-middle">
                                    <h6 class="cartText">
                                        <%=order.status%>
                                    </h6>
                                </td>
                                <% }); %>


                            </tr>
                            <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <p class="text-center cartAlert">Sorry, no order to be display</p>
                <% } %>
    </div>
    </body>

    <%-include("footer")-%>