<%-include("header") -%>
<div id="lipsticks">
    <div class="container buysection">
        <div class="row">
            <div class="col-md-7 img">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner lipsticks">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/image/lips/lip.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/lips-full.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/s-l1600.jpg" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/601.jpg" alt="Four slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/602.jpg" alt="Five slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/603.jpg" alt="Six slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/604.jpg" alt="Seven slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/605.jpg" alt="Eight slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/606.jpg" alt="Nine slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/image/lips/lipstickbtn.jpg" alt="Ten slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-5 text">
                <div class="namePro">
                    <h3>MOONSHOT reve Stick Extreme Pro Lipstick 3.5g Matte Deep Mood </h3>
                    <hr>
                </div>
                 <form method="POST" action="/addlipsticks" class="buyForm was-validated">
                    <h6>Condition: 100% new in box</h6>
                    <div class="form-group buyForm">
                        <select name="lipColor" class="custom-select" required>
                          <option value="">Select color</option>
                          <option value="601">Seine-601</option>
                          <option value="602">Chai Tea-602</option>
                          <option value="603">Rose Bonbon-603</option>
                          <option value="604">Urban Mauve-604</option>
                          <option value="605">In The City-605</option>
                          <option value="606">Maulin Rouge-606</option>
                        </select>
                        <br>
                        <div class="form-group"></div>
                        <label for="number">Quantity</label>
                        <input type="number" name="qty" min="1">
                        <input type="hidden" name="nonce" value="<%= nonce %>">
                    </div>
                    <hr>
                    <h2>Price: CAD $22.00</h2>
                      <button class="btn btn-primary lipbtn" type="submit">Add to cart</button>
                </form>
                <hr>
                <div class="description">
                    <p>
                        <i class="fas fa-truck"></i> Free delivery in Toronto. Get it in 3-5 business day<br>
                        <i class="fas fa-times"></i> No return
                    </p>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
</body>


<%-include("footer") -%>