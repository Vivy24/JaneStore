<%-include("navbar") -%>
<script src="/script.js" defer></script>
<script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=CAD"></script>
        <div id="cart">
            <% if (cart && cart.items.length>0){ %>
                <form action="/cart/update" method="POST">
                <table class="table table-hover cartTable">
                    <thead>          
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Qty</th>
                        <th scope="col">Price</th>
                        <th scope="col"></th>
                    </thead>
                    <tbody>
                    <% cart.items.forEach(function(product) { %>
                        <tr class="cart-product">
                            <td class="product-thumb align-middle">
                                <img src="<%=product.image%>" alt="order lipsticks" class="cartImg">
                            </td>
                            <td class="align-middle">
                                <h6 id="title" class="cartText"><%= product.title %></h6>
                            </td>
                            <td class="align-middle">
                                <input type="number" min="1" class="qty" name="qty[]" value="<%= product.qty %>">
                                <input type="hidden" class="id" name="product_id[]" value="<%=product.id%>">
                                <input type="hidden" class="price" value="<%=product.price%>">
                            </td>
                            <td class="align-middle">
                                <%= product.formattedPrice %>
                            </td>
                            <td class="align-middle text-center">
                                <a href="/cart/remove/<%=product.id%>/<%= nonce %>">
                                    <i class="fas fa-trash text-danger"></i>
                                </a>
                            </td>
                        </tr>
                       
                    <% }); %>
                        <tr class="cart-info">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td id="total">Total: <%=cart.formattedTotals %></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
                    <div class="clearfix cart-footer">
                        <input type="hidden" name="nonce" value="<%=nonce%>">
                        <button type="submit" class="btn btn-default pull-left"><i class="fa fa-refresh"></i> Update cart</button>
                    </form>
                        <a href="/cart/empty/<%= nonce %>" class="btn btn-default pull-left"><i class="fa fa-remove"></i> Empty cart</a>
                        <a href="/checkout" class="btn btn-default pull-right">Checkout <i class="fa fa-angle-right"></i></a>
                        <div id="paypal"></div>
                    </div>
               
            <% } else { %>
                    <p class="text-center cartAlert">Sorry, no products in your cart</p>
            <% } %>
        </div>
    </body>

<%-include("footer")-%>