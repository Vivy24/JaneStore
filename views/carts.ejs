<%-include("header") -%>
<body id="carts">
        <header>
            <a href="/" ><img id="logo" src="/image/logo.jpg"></a>
            <ul>
                <li><a href="/lipsticks">Lipsticks</a></li>
                <li><a href="/masks">Masks</a></li>
                <li><a href="/contacts">Contacts</a></li>
                <li><a href="/cart"><i class="fas fa-shopping-cart"></i></a></li>
            </ul>
        </header>
        <div id="cart">
            <% if (cart && cart.items.length>0){ %>
                <form action="/cart/update" method="POST">
                <table class="table table-striped cartTable">
                    <thead>
                        <th scope="col"></th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Qty</th>
                        <th scope="col">Price</th>
                    </thead>
                    <tbody>
                    <% cart.items.forEach(function(product) { %>
                        <tr class="cart-product">
                            <th scope="row">
                                <a href="/cart/remove/<%=product.id%>/<%= nonce %>">
                                    <i class="fa fa-remove text-danger"></i>
                                </a>
                            </th>
                            <td class="product-thumb">
                                <img src="<%=product.image%>" alt="order lipsticks" class="cartImg">
                            </td>
                            <td>
                                <h6 class="cartText"><%= product.title %></h6>
                            </td>
                            <td>
                                <input type="text" class="qty" name="qty[]" value="<%= product.qty %>">
                                <input type="hidden" name="product_id[]" value="<%=product.id%>">
                            </td>
                            <td>
                                <%= product.formattedPrice %>
                            </td>
                        </tr>
                    <% }); %>
                        <tr class="cart-info">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Total: <%=cart.formattedTotals %></td>
                        </tr>
                    </tbody>
                </table>
                    <div class="clearfix cart-footer">
                        <input type="hidden" name="nonce" value="<%=nonce%>">
                        <button type="submit" class="btn btn-default pull-left"><i class="fa fa-refresh"></i> Update cart</button>
                        <a href="/cart/empty/<%= nonce %>" class="btn btn-default pull-left"><i class="fa fa-remove"></i> Empty cart</a>
                        <a href="/checkout" class="btn btn-default pull-right">Checkout <i class="fa fa-angle-right"></i></a>
                    </div>
                </form>
            <% } else { %>
                <p class="cartAlert">Sorry, no products in your cart</p>
            <% } %>
        </div>
    </body>

<%-include("footer")-%>