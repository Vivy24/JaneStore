<%-include("head") -%>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height:100vh">
            <div class="col-4">
                
                <h3 class="text-center">Login</h3>
                <div class="card">
                    <div style= "outline: 1px solid #f47dbb;"class="card-body">
                        <% if (message!=undefined){%>
                           <p> <%=message%></p>
                        <%}%>
                            <form method="POST" action="/login">
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input name="username" type="text" class="form-control" id="username" placeholder="Enter username">
                                </div>
                                <div class="form-group">
                                    <label for="passwordInput">Password</label>
                                    <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Password">
                                </div>
                                <button id="formBtn" type="submit" class="btn btn-primary">Login</button>
                                
                            </form>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include("footer") -%>
